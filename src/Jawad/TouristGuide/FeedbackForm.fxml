<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Jawad.TouristGuide.FeedbackFormController">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="26.0" prefHeight="447.0" prefWidth="600.0" spacing="10">
            <children>
                <Label style="-fx-font-size: 18px;" text="Feedback Form" />
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Select Tour :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <ComboBox fx:id="operatorComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Communication Support (1-5):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <ComboBox fx:id="communicationComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Payment (1-5):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <ComboBox fx:id="paymentComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </children>
                </GridPane>
                <Label style="-fx-font-size: 16px;" text="Comments:" />
                <TextArea fx:id="commentsTextArea" prefHeight="100.0" prefWidth="300.0" />
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button onAction="#submitFeedback" text="Submit" />
                        <Button onAction="#clearFields" text="Clear" />
                    </children>
                </HBox>
                <Label fx:id="confirmationLabel" style="-fx-font-size: 14px;" />
            </children>
        </VBox>
    </children>
</AnchorPane>
