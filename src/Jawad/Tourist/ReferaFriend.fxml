<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox layoutX="75.0" layoutY="15.0" prefHeight="622.0" prefWidth="552.0" spacing="10.0">
            <children>
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Refer a Friend" />
                <Label text="Friend's Email Address:" />
                <TextArea fx:id="friendEmailTextArea" />
                <Label text="Personalized Message:" />
                <TextArea fx:id="personalizedMessageTextArea" />
                <HBox spacing="10.0">
                    <children>
                        <Button onAction="#sendReferralEmail" text="Send Referral Email" />
                        <Button onAction="#shareOnSocialMedia" text="Share on Social Media" />
                    </children>
                </HBox>
                <Label fx:id="confirmationLabel" />
                <HBox spacing="10.0">
                    <children>
                        <Label text="Reward Points:" />
                        <Label fx:id="rewardPointsLabel" />
                    </children>
                </HBox>
                <Button onAction="#redeemPoints" text="Redeem Points" />
            </children>
        </VBox>
    </children>
</AnchorPane>
